      <maxSize>0.347 0.46</maxSize>
      <path>./assets/no_boxart.png</path>
    </image>
  </view>
  <view name="basic, detailed, grid">
    <helpsystem name="help">
      <textColor>FFFFFF90</textColor>
      <iconColor>FFFFFF90</iconColor>
    </helpsystem>
    <image name="background" extra="true">
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <path>./assets/bg.png</path>
      <zIndex>0</zIndex>
      <color>CCCCCC</color>
    </image>
    <image name="backgroundx" extra="true">
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <path>./assets/gamelist.png</path>
    </image>
<image name="console" extra="true">
			<pos>0.5 0.04</pos>
			<origin>0.5 0.0</origin>
			<maxSize>0.34 0.08</maxSize>
			<path>./art/${system.theme}.svg</path>
			<zIndex>150</zIndex>
		</image>
        <text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate">
      <visible>true</visible>
    </text>
    
    <image name="md_thumbnail">
      <visible>false</visible>
      <origin>0.5 0.5</origin>
      <pos>0.5 0.5</pos>
      <minSize>1.25 1.25</minSize>
      <color>FFFFFF0A</color>
    </image>
    <video name="md_video">
      <origin>0.5 0.5</origin>
      <pos>0.776 0.388</pos>
      <maxSize>0.347 0.46</maxSize>
      <delay>0.7</delay>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <snapshotSource>image</snapshotSource>
    </video>
    <text name="md_description">
      <pos>0.605 0.685</pos>
      <size>0.347 0.183</size>
      <color>ffffff</color>
      <fontSize>0.021</fontSize>
      <fontPath>./assets/noto.ttf</fontPath>
    </text>
    <image name="logo">
      <pos>1 1</pos>
      <color>00000000</color>
      <path>./assets/box.png</path>
    </image>
  </view>
  <view name="basic, detailed">
    <textlist name="gamelist">
      <selectorColor>0f85a5</selectorColor>
