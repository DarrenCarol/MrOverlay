<!--METADATA VERSION-->
<theme>
	<formatVersion>4</formatVersion>
	<view name="detailed">
		
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.2965 0.3595</pos>
			<maxSize>0.273 0.471</maxSize>
		</image>
		
	</view>

	<view name="detailed, video">

				<!--<image name="filter" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./assets/system_overlay.png</path>
			<zIndex>1</zIndex>
		</image>-->
		
		<image name="logo">
			<pos>1 1</pos>
			<color>00000000</color>
			<size>0.01 0.01</size>
			<path>./../../assets/box.png</path>
			<zIndex>1</zIndex>
		</image>
		
		<image name="background" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./../../assets/bg.png</path>
			<zIndex>0</zIndex>
		</image>
		
		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_releasedate">
				<pos>.160 .548</pos>
				<size>0.5 0.16</size>
				<color>ffffff</color>
				<fontSize>0.017</fontSize>
				<fontPath>./../../assets/SST.ttf</fontPath>
		</datetime>
		
		<text name="md_developer">
				<pos>.22 .58</pos>
				<size>0.5 0.16</size>
				<color>ffffff</color>
		</text>
		
		<text name="md_players">
				<pos>.2 .58</pos>
				<size>0.5 0.16</size>
		</text>
		
		<text name="md_lbl_players">
				<pos>.160 .58</pos>
				<size>0.5 0.16</size>
		</text>
		
		<text name="md_description">
			<pos>0.16 0.693</pos>
			<size>0.272 0.177</size>
			<color>ffffff</color>
		</text>
		
		<rating name="md_rating">
			<pos>0.22 0.617</pos>
			<size>0.08 0.02</size>
			<filledPath>./../../assets/rating_filled.svg</filledPath>
			<unfilledPath>./../../assets/rating_unfilled.svg</unfilledPath>
			<zIndex>40</zIndex>
		</rating>
		
		<text name="md_developer, md_players, md_description, md_lbl_players, md_players">
			<fontSize>0.017</fontSize>
			<fontPath>./../../assets/SST.ttf</fontPath>
			<color>ffffff</color>
			<forceUppercase>0</forceUppercase>
			<zIndex>2</zIndex>
		</text>
		
		<text name="system_name" extra="true">
			<text>${system.fullName}</text>
			<forceUppercase>0</forceUppercase>
			<size>0.5 0.025</size>
			<pos>0.02 0.037</pos>
			<color>ffffff</color>
			<fontPath>./../../assets/SST.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<zIndex>2</zIndex>
		</text>

	</view>
</theme>
	
