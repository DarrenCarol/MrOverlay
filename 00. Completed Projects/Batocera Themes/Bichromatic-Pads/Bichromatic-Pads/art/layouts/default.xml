<?xml version="1.0" encoding="UTF-8" ?>
<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
		<carousel name="systemcarousel">
		<maxLogoCount>1</maxLogoCount>
		<type>horizontal</type>
		<defaultTransition>fade</defaultTransition>
		  <color>00000000</color>
		  <colorEnd>00000000</colorEnd>
		  <systemInfoDelay>200</systemInfoDelay>
		  <pos>0.04 0.06</pos>
		  <size>0.31 0.23</size>
		  <zIndex>20</zIndex>
		</carousel>

		<text name="systemInfo" extra="true">
		<delay>0</delay>
		  <pos>0.4 0.85</pos>
		  <size>1 0.1</size>
		  <backgroundColor>0000FF00</backgroundColor>
		  <color>DDDDDD00</color>
		  <glowColor>00000000</glowColor>
		  <glowSize>5</glowSize>
		  <reflexion>0.00 0.0</reflexion>
		</text>




 <text name="systemInfoEx" extra="true">
 <text>Total games : {binding:total}
Total played : {binding:gamesPlayed}
Favorites : {binding:favorites}
Most played : {binding:mostPlayed}</text>        
<alignment>left</alignment>
<verticalAlignment>center</verticalAlignment>
<forceUppercase>1</forceUppercase>
<fontPath>./art/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
<fontSize>0.02</fontSize>
<pos>0.04 0.74</pos>
<size>0.92 0.28</size>
<zIndex>100</zIndex>
<color>D0D0D0FF</color>
<glowColor>000000A0</glowColor>
<glowSize>0</glowSize>
</text>




	</view>
		
